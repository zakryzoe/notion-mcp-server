# Notion MCP Server Environment Variables
# Copy this file to .env and fill in your values

# Required: Your Notion integration token
# Get it from: https://www.notion.so/profile/integrations
NOTION_TOKEN=ntn_your_token_here

# Optional: Port for HTTP server (default: 3000)
PORT=3001

# Optional: For HTTP transport authentication
# This is used to secure the HTTP endpoint
# If not set, a random token will be generated
# AUTH_TOKEN=your_custom_auth_token_here

# Optional: Custom base URL (usually not needed)
# BASE_URL=https://api.notion.com
